<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class catalog="system" name="beans.Teacher" optimistic-lock="version" table="teacher">
    <id name="id" type="int">
      <column name="id"/>
      <generator class="increment"/>
    </id>
    <property name="username" type="string">
      <column length="256" name="username"/>
    </property>
    <property name="name" type="string">
      <column length="256" name="name"/>
    </property>
    <property name="department" type="string">
      <column length="256" name="department"/>
    </property>
    <property name="email" type="string">
      <column length="256" name="email"/>
    </property>
    <property name="password" type="string">
      <column length="256" name="password"/>
    </property>
  </class>
</hibernate-mapping>