<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class catalog="system" name="beans.Subjects" optimistic-lock="version" table="subjects">
    <id name="id" type="int">
      <column name="id"/>
      <generator class="increment"/>
    </id>
    <property name="subjectName" type="string">
      <column length="100" name="subjectName"/>
    </property>
   <property name="semester" type="string">
      <column length="100" name="semester"/>
    </property>
    <property name="creditHours" type="string">
      <column length="30" name="creditHours"/>
    </property>
    <property name="theoryOrPractical" type="string">
      <column length="256" name="theoryOrPractical"/>
    </property>
    <property name="totalLectures" type="string">
      <column length="100" name="totalLectures"/>
    </property>
   <property name="department" type="string">
      <column length="100" name="department"/>
    </property>
  </class>
</hibernate-mapping>